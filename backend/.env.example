# === SUPABASE ===
# Получить здесь: https://supabase.com → Project → Settings → API
SUPABASE_URL=https://YOUR_PROJECT_ID.supabase.co
SUPABASE_SERVICE_KEY=your_service_role_key_here

# === JWT ===
# Любая длинная случайная строка (например: openssl rand -hex 32)
JWT_SECRET=your_super_secret_jwt_key_at_least_32_characters

# === GOOGLE GEMINI AI ===
# Получить бесплатно: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# === STRIPE (оплата подписки) ===
# Получить: https://dashboard.stripe.com → Developers → API Keys
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# === SERVER ===
PORT=5000
FRONTEND_URL=http://localhost:5173

# === DEVELOPER ACCOUNT ===
# Email разработчика — этот аккаунт получит полный доступ автоматически
DEVELOPER_EMAIL=your@email.com
